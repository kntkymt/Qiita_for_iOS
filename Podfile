  # UI
  pod 'FDFullscreenPopGesture', '1.1'
  pod 'TabPageViewController', :git => 'https://github.com/grd888/TabPageViewController.git', :branch => 'swift5'
  pod 'AMScrollingNavbar'
  pod 'Floaty', '~> 4.2.0'

  # Network
  pod 'Moya'
  pod 'Nuke'

  # Promise
  pod 'PromiseKit'

  # Logger
  pod 'SwiftyBeaver'

  # Misc
  pod 'Instantiate'
  pod 'PluggableAppDelegate'
  pod 'ReusableKit'
  pod 'WebViewWarmupper'
  pod 'KeychainAccess'

  # Linter
  pod 'SwiftLint'
end
